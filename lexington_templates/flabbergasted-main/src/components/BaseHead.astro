---
import "../styles/global.css";
import Metas from "./seo/Metas.astro";
import Favicons from "./seo/Favicons.astro";
const {
  title = "Bloom",
  description = "Bloom offers an intuitive, no-code website builder tailored for solopreneurs, creatives, and any size businesses. Empower your online presence with SEO-optimized, e-commerce and accessible websites, leveraging our premium themes and easy content management. Integrate seamlessly with your email, enhance your digital footprint, and let your ideas flourish. Start building with Bloom today and watch your vision come to life. Your ideas deserve to Bloom.",
  url,
  socialImage = "/bloom-admin.png",
  twitterImage = "/bloom-admin.png", // Assuming you have a separate image for Twitter
  author = "Bloom",
} = Astro.props;
const sanitizedTitle = title.toLowerCase().replaceAll(" ", "-");
---
<Metas
  title={title}
  description={description.substring(0, 100)}
  url={Astro.site
    ? `${Astro.site}/${sanitizedTitle}`
    : `https://lexingtonthemes.com/${sanitizedTitle}`}
  image={socialImage}
  author={author}
  twitterImage={twitterImage}
/>
<Favicons/>

